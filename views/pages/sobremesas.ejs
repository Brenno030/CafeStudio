<div class="container mt-5">
  <div class="row g-4 justify-content-center">
    <% sobremesas.forEach(sobremesa => { %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header text-center">
             <img src="/images/<%= sobremesa.imagem %>" alt="<%= sobremesa.nome %>" class="card-img" />
          </div>
          <div class="card-body">
            <h5 class="card-title d-flex justify-content-between">
              <span><%= sobremesa.nome %></span>
              <span class="price">R$ <%= sobremesa.preco.toFixed(2) %></span>
            </h5>
            <p class="card-text"><%= sobremesa.descricao %></p>
           <!--<a href="/carrinho/<%= sobremesa._id %>" class="btn btn-primary w-100 mt-2">
              Adicionar ao Pedido
            </a>
            --> 
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
