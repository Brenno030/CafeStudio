<main class="cards-container" >
  <div class="container mt-5">
    <div class="row g-4 justify-content-center">
      <% pratos.forEach(prato => { %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-header text-center">
              <img src="/images/<%= prato.imagem %>" alt="<%= prato.nome %>" class="card-img" />
            </div>
            <div class="card-body">
              <h5 class="card-title">
                <%= prato.nome %>
                <span class="float-end price">R$ <%= prato.preco.toFixed(2) %></span>
              </h5>
              <p class="card-text">
                <%= prato.descricao %>
              </p>
             <!--<a href="/carrinho/<%= prato._id %>" class="btn btn-primary w-100 mt-2">
              Adicionar ao Pedido
            </a>
              -->
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</main>
