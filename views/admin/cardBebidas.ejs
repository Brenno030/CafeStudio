<div class="container mt-5">
  <div class="d-flex justify-content-end mb-3">
    <%- include('../partials/btnCriar', { categoria }) %>
  </div>
  <div class="row g-4 justify-content-center">
    <% bebidas.forEach(bebida => { %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header text-center">
            <img src="/images/<%= bebida.imagem %>" alt="<%= bebida.nome %>" class="card-img" />
          </div>
          <div class="card-body">
            <h5 class="card-title d-flex justify-content-between">
              <span><%= bebida.nome %></span>
              <span class="price">R$ <%= bebida.preco.toFixed(2) %></span>
            </h5>
            <p class="card-text"><%= bebida.descricao %></p>
            <div class="d-flex justify-content-between">
              <!-- Botão editar SEM form -->
              <button class="btn btn-warning" type="button"
                      data-bs-toggle="modal" 
                      data-bs-target="#modalEditar"
                      data-id="<%= bebida._id %>"
                      data-nome="<%= bebida.nome %>"
                      data-descricao="<%= bebida.descricao %>"
                      data-preco="<%= bebida.preco %>"
                      data-imagem="<%= bebida.imagem %>">
                Editar
              </button>

              <form action="/admin/bebidas/deletar/<%= bebida._id %>" method="POST">
                <button type="submit" class="btn btn-danger">Deletar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Inclui o modal só uma vez -->
  <%- include('../partials/btnEditar', { categoria }) %>
</div>
